<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="swipe.android.hipaapix"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="11" />

    <uses-permission android:name="android.permission.WRITE_CALENDAR" />
    <uses-permission android:name="android.permission.READ_CALENDAR" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_SYNC_STATS" />
    <uses-permission android:name="android.permission.AUTHENTICATE_ACCOUNTS" />
    <uses-permission android:name="android.permission.WRITE_SYNC_SETTINGS" />
    <uses-permission android:name="android.permission.READ_SYNC_SETTINGS" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:name="swipe.android.hipaapix.HipaapixApplication"
        android:allowBackup="true"
        android:icon="@drawable/hippa_pix_app_icon"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <meta-data
            android:name="com.crashlytics.ApiKey"
            android:value="8553c9eeaaf67ce6f513e36c6cd30df3176d0664" />
       

     
        <activity
            android:name="swipe.android.hipaapix.LoginActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="swipe.android.hipaapix.HomeActivity"
            android:windowSoftInputMode="adjustPan|adjustResize"
            android:screenOrientation="portrait" >
        </activity>
           <activity
            android:name="swipe.android.hipaapix.GridOfImages"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="swipe.android.hipaapix.DisclaimerActivity"
            android:screenOrientation="portrait" >
        </activity>
          <activity
            android:name="swipe.android.hipaapix.SearchResultActivity"
            android:screenOrientation="portrait" >
        </activity>
        
        <service
            android:name="swipe.android.hipaapix.sync.HippaPixSyncService"
            android:exported="true" >
            <intent-filter>
                <action android:name="android.content.SyncAdapter" />
            </intent-filter>

            <meta-data
                android:name="android.content.SyncAdapter"
                android:resource="@xml/hipaapix_sync_adapter" />
        </service>
        <service
            android:name="swipe.android.hipaapix.sync.HipaaPixAuthenticatorService"
            android:exported="false" >
            <intent-filter>
                <action android:name="android.accounts.AccountAuthenticator" />
            </intent-filter>

            <meta-data
                android:name="android.accounts.AccountAuthenticator"
                android:resource="@xml/hipaapix_authenticator" />
        </service>

        <provider
            android:name="swipe.android.hipaapix.HipaapixContentProvider"
            android:authorities="@string/hipaapix_sync_contentAuthority"
            android:exported="false"
            android:syncable="true" >
        </provider>
        
     </application>

</manifest>