<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <FrameLayout
        android:id="@+id/FrameLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" >

        <ImageView
            android:id="@+id/camera_footer"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:gravity="center"
            android:scaleType="centerCrop"
            android:src="@drawable/footernav_background" />

        <RelativeLayout
            android:id="@+id/relativelayout1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/take_picture_btn"
                android:layout_width="wrap_content"
                android:layout_height="86dip"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:paddingLeft="5dip"
                android:paddingRight="5dip"
                android:paddingTop="12dip"
                android:src="@drawable/button_take_photo_not_selected" />

            <TextView
                android:id="@+id/cancel_text"
                android:layout_width="wrap_content"
                android:layout_height="86dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingTop="35dp"
                android:text="Cancel"
                android:textSize="32sp"
                android:textStyle="bold" />
        </RelativeLayout>
    </FrameLayout>

    <FrameLayout
        android:id="@+id/FrameLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/needs_change_view"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/camera_header"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:adjustViewBounds="true"
            android:gravity="center"
            android:scaleType="centerCrop"
            android:src="@drawable/headernav_background" />

        <RelativeLayout
            android:id="@+id/relativelayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <RelativeLayout
                android:id="@+id/flash_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <ImageView
                    android:id="@+id/flash_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="44dip"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_centerInParent="true"
                    android:paddingBottom="5dip"
                    android:paddingLeft="5dip"
                    android:paddingRight="5dip"
                    android:paddingTop="12dip"
                    android:src="@drawable/photo_flash_logo" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/flash_icon"
                    android:text="Off"
                    android:id="@+id/flash_toggle"
                    android:textColor="#e43f2c"
                    android:textSize="24sp"
                    android:textStyle="bold" >
                </TextView>
</RelativeLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="44dip"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:paddingBottom="5dip"
                    android:paddingLeft="5dip"
                    android:paddingRight="5dip"
                    android:paddingTop="12dip"
                    android:src="@drawable/take_photo_label" />

                <ImageView
                    android:id="@+id/switch_front_back_camera"
                    android:layout_width="wrap_content"
                    android:layout_height="44dip"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_centerInParent="true"
                    android:paddingBottom="5dip"
                    android:paddingLeft="5dip"
                    android:paddingRight="5dip"
                    android:paddingTop="12dip"
                    android:src="@drawable/front_back_camera_selector" />
            </RelativeLayout>
    </FrameLayout>

</RelativeLayout>